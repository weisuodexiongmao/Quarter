<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/center_sdv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/center_sdv"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/center_sdv"
        android:text="TextView" />

    <TextView
        android:id="@+id/user_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/center_sdv"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/center_sdv"
        android:text="TextView" />

    <TextView
        android:id="@+id/biaoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/center_sdv"
        android:layout_below="@+id/center_sdv"
        android:layout_marginTop="33dp"
        android:text="TextView" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/center_s"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/biaoti" />
</RelativeLayout>
