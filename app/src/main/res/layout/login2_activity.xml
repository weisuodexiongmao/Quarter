<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/raw_1500359346"
    tools:context="lei.com.yulei.quarter.login.login_view.Login2_Activity">
<ImageView
    android:id="@+id/login_back"
    android:layout_width="30dp"
    android:layout_height="50dp"
    android:src="@drawable/raw_1500369941"
    android:layout_marginTop="39dp"
    android:layout_marginStart="22dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

    <ImageView
        android:background="@drawable/qaz13467"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/login_back"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView5" />
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:alpha="0.6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入账号" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入密码" />
    </LinearLayout>
<TextView
    android:text="账号："
    android:textColor="#fff"
    android:textSize="26sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_alignTop="@+id/linearLayout4"
    android:layout_toStartOf="@+id/linearLayout4" />
    <TextView
        android:textColor="#fff"
        android:text="密码："
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout4"
        android:layout_toStartOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="#f7b50c"
        android:text="登录" />
    <TextView
        android:id="@+id/textview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="注册账号"
        android:textSize="20sp"
        android:layout_alignTop="@+id/login_back"
        android:layout_alignParentEnd="true" />
    <TextView

        android:textColor="#fff"
        android:text="游客登录"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />
    <TextView
        android:id="@+id/textview8"
        android:text="忘记密码？"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />
</RelativeLayout>
